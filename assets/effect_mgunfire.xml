<effect name="fire">
	<emitter name="fire" life="0.8">
		<param name="settings" mode="once" type="point"/>
		<param name="image" file="gunflash1.png" blend="add" width="32" height="16"/>	
		<param name="life" min="0.1" max="0.12"/>
		<param name="angle" min="0.0" max="0.0"/>
		<param name="rotangle" type="random" min="0.0" max="0.0"/>
		<param name="speed" min="0.0" max="0.0"/>
		<param name="gravity" min="0.0" max="0.0"/>
		<param name="scale" min="0.7" max="1.2"/>
		<param name="rotspeed" min="0.0" max="0.0"/>
		<param name="r" min="255" max="255"/>
		<param name="g" min="255" max="255"/>
		<param name="b" min="255" max="255"/>
		<param name="a" min="255" max="255"/>	
		<param name="timetrack">
			<track time="0.0" quantity="8.0"/>
			<track time="0.79" quantity="8.0"/>
			<track time="0.8" quantity="0.0"/>
		</param>
		<param name="lifetrack">
			<track life="0.0" speed="0.0" gravity="0.0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.0"/>
			<track life="0.5" speed="0.0" gravity="0.0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.5"/>
			<track life="1.0" speed="0.0" gravity="0.0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.0"/>
		</param>
	</emitter>
	<emitter name="cloud" life="0.8">
		<param name="settings" mode="once" type="point"/>
		<param name="image" file="gunflashsmoke1.png" blend="add" width="24" height="24"/>
		<param name="life" min="0.1" max="0.12"/>
		<param name="angle" min="0.0" max="0.0"/>
		<param name="rotangle" type="random" min="0.0" max="360.0"/>
		<param name="speed" min="0.0" max="0.0"/>
		<param name="gravity" min="0.0" max="0.0"/>
		<param name="scale" min="0.7" max="1.2"/>
		<param name="rotspeed" min="0.0" max="0.0"/>
		<param name="r" min="255" max="255"/>
		<param name="g" min="255" max="255"/>
		<param name="b" min="255" max="255"/>
		<param name="a" min="255" max="255"/>	
		<param name="timetrack">
			<track time="0.0" quantity="8.0"/>
			<track time="0.79" quantity="8.0"/>
			<track time="0.8" quantity="0.0"/>
		</param>
		<param name="lifetrack">
			<track life="0.0" speed="0.0" gravity="0.0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.3"/>
			<track life="0.5" speed="0.0" gravity="0.0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.6"/>
			<track life="1.0" speed="0.0" gravity="0.0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.3"/>
		</param>
	</emitter>
</effect>
