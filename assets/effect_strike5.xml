<effect name="fire">
	<emitter name="fire" life="0.2">
		<param name="settings" mode="once" type="point"/>
		<param name="image" file="cloud2.png" blend="alpha" width="40" height="40"/>	
		<param name="life" min="7.3" max="8.0"/>
		<param name="angle" min="-100" max="-80"/>
		<param name="rotangle" type="random" min="-100" max="-80"/>
		<param name="speed" min="25.0" max="45.0"/>
		<param name="gravity" min="0.0" max="0.0"/>
		<param name="scale" min="3" max="4"/>
		<param name="rotspeed" min="0.0" max="0.0"/>
		<param name="r" min="128" max="128"/>
		<param name="g" min="128" max="128"/>
		<param name="b" min="128" max="128"/>
		<param name="a" min="255" max="255"/>	
		<param name="timetrack">
			<track time="0.0" quantity="0.0"/>
			<track time="0.1" quantity="20.0"/>
			<track time="0.2" quantity="0.0"/>
		</param>
		<param name="lifetrack">
			<track life="0.0" speed="2.0" gravity="0.0" scale="1.5" rotspeed="0.0" r="1.0" g="1.0" b="1.0" a="0.5"/>
			<track life="0.5" speed="0.4" gravity="0.0" scale="1.7" rotspeed="0.0" r="1.0" g="1.0" b="1.0" a="0.3"/>
			<track life="1.0" speed="0.0" gravity="0.0" scale="2.0" rotspeed="0.0" r="1.0" g="1.0" b="1.0" a="0.0"/>
		</param>
	</emitter>

	<emitter name="cloud" life="0.2">
		<param name="settings" mode="once" type="point"/>
		<param name="image" file="cloud1.png" blend="add" width="40" height="40"/>	
		<param name="life" min="1.0" max="1.3"/>
		<param name="angle" min="-120" max="-60"/>
		<param name="rotangle" type="random" min="-120" max="-60"/>
		<param name="speed" min="60.0" max="70.0"/>
		<param name="gravity" min="0.0" max="0.0"/>
		<param name="scale" min="1.8" max="2.0"/>
		<param name="rotspeed" min="0.4" max="1.0"/>
		<param name="r" min="160" max="180"/>
		<param name="g" min="108" max="108"/>
		<param name="b" min="74" max="74"/>
		<param name="a" min="255" max="255"/>	
		<param name="timetrack">
			<track time="0.0" quantity="80.0"/>
			<track time="0.1" quantity="0.0"/>
		</param>
		<param name="lifetrack">
			<track life="0.0" speed="2.5" gravity="0.0" scale="2.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.8"/>
			<track life="0.4" speed="0.3" gravity="0.0" scale="1.4" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.3"/>
			<track life="1.0" speed="0.0" gravity="0.0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.0"/>
		</param>
	</emitter>



	<emitter name="cloud" life="0.2">
		<param name="settings" mode="once" type="area" width="30" height="5"/>
		<param name="image" file="nitu.png" blend="alpha" width="64" height="64"/>
		<param name="life" min="0.7" max="0.9"/>
		<param name="angle" min="-100" max="-80"/>
		<param name="rotangle" type="random" min="-100" max="-80"/>
		<param name="speed" min="160.0" max="220.0"/>
		<param name="gravity" min="280.0" max="380.0"/>
		<param name="scale" min="2" max="2"/>
		<param name="rotspeed" min="0" max="0"/>
		<param name="r" min="255" max="255"/>
		<param name="g" min="255" max="255"/>
		<param name="b" min="255" max="255"/>
		<param name="a" min="255" max="255"/>	
		<param name="timetrack">
			<track time="0.0" quantity="120.0"/>
			<track time="0.2" quantity="0.0"/>
		</param>
		<param name="lifetrack">
			<track life="0.0" speed="1.0" gravity="1.0" scale="0.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="1.0"/>
			<track life="0.1" speed="1.0" gravity="1.0" scale="0.1" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.9"/>
			<track life="0.3" speed="1.0" gravity="1.0" scale="0.3" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.4"/>
			<track life="1.0" speed="1.0" gravity="1.0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.0"/>
		</param>
	</emitter>

</effect>
