<effect name="fire">
	<emitter name="cloud" life="0.2">
		<param name="settings" mode="once" type="point"/>
		<param name="image" file="spark.png" blend="add" width="40" height="40"/>	
		<param name="life" min="0.6" max="0.8"/>
		<param name="angle" min="0.0" max="360.0"/>
		<param name="rotangle" type="random" min="0.0" max="360.0"/>
		<param name="speed" min="100.0" max="120.0"/>
		<param name="gravity" min="0.0" max="0.0"/>
		<param name="scale" min="0.2" max="1.0"/>
		<param name="rotspeed" min="0.0" max="0.0"/>
		<param name="r" min="255" max="255"/>
		<param name="g" min="192" max="220"/>
		<param name="b" min="118" max="118"/>
		<param name="a" min="255" max="255"/>	
		<param name="timetrack">
			<track time="0.0" quantity="100.0"/>
			<track time="0.1" quantity="100.0"/>
			<track time="0.2" quantity="0.0"/>
		</param>
		<param name="lifetrack">
			<track life="0.0" speed="2.0" gravity="0.0" scale="1.5" rotspeed="0.0" r="1.0" g="1.0" b="1.0" a="0.6"/>
			<track life="0.5" speed="0.4" gravity="0.0" scale="1.0" rotspeed="0.0" r="1.0" g="1.0" b="1.0" a="0.4"/>
			<track life="1.0" speed="0.0" gravity="0.0" scale="0.5" rotspeed="0.0" r="1.0" g="1.0" b="1.0" a="0.0"/>
		</param>
	</emitter>
	<emitter name="cloud" life="0.2">
		<param name="settings" mode="once" type="point"/>
		<param name="image" file="star.png" blend="add" width="64" height="64"/>
		<param name="life" min="1.0" max="1.2"/>
		<param name="angle" min="0.0" max="360.0"/>
		<param name="rotangle" type="random" min="0.0" max="360.0"/>
		<param name="speed" min="90.0" max="100.0"/>
		<param name="gravity" min="400.0" max="500.0"/>
		<param name="scale" min="0.8" max="1.0"/>
		<param name="rotspeed" min="0.4" max="1.0"/>
		<param name="r" min="57" max="57"/>
		<param name="g" min="44" max="44"/>
		<param name="b" min="32" max="32"/>
		<param name="a" min="255" max="255"/>	
		<param name="timetrack">
			<track time="0.0" quantity="100.0"/>
			<track time="0.1" quantity="0.0"/>
		</param>
		<param name="lifetrack">
			<track life="0.0" speed="2.0" gravity="0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.9"/>
			<track life="0.3" speed="0.4" gravity="0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.6"/>
			<track life="1.0" speed="0.0" gravity="0" scale="1.0" rotspeed="1.0" r="1.0" g="1.0" b="1.0" a="0.0"/>
		</param>
	</emitter>
</effect>
